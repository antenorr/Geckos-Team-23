{
  "manifest_version": 2,
  "name": "Chingu MasterTab",
  "version": "0.7.0",
  "description": "Chingu MasterTab",
  "icons": {
    "16": "Chingu-small.png",
    "128": "Chingu.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "MasterTab"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus"
  ]
}
